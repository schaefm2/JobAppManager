<Window x:Class="JobAppManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobAppManager"
        xmlns:vm="clr-namespace:JobAppManager.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:StatusConverter x:Key="StatusConverter"/>
    </Window.Resources>
    <Grid PreviewMouseDown="MainGrid_PreviewMouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        
        

        <DataGrid Grid.Row="1" CanUserAddRows="False" CanUserDeleteRows="False"
                  ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" AutoGenerateColumns="False">
            <!-- Styling -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Applied">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Under Review">
                            <Setter Property="Background" Value="Yellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Interviewing">
                            <Setter Property="Background" Value="GreenYellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Offer">
                            <Setter Property="Background" Value="Green"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="3*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="3*"/>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="3*"/>
                <DataGridTextColumn Header="Link" Binding="{Binding Link}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Name" Margin="5"/>
            <TextBox Margin="5" Text="{Binding CurrentJob.Name}" /> 
            <Label Content="Description" Margin="5"/>
            <TextBox Margin="5" Height="80" Text="{Binding CurrentJob.Description}"/>
            <Label Content="Company" Margin="5"/>
            <TextBox Margin="5" Text="{Binding CurrentJob.Company}"/>
            <Label Content="Link" Margin="5"/>
            <TextBox Margin="5" Text="{Binding CurrentJob.Link}"/>
            
            <!-- Radio buttons-->
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <RadioButton Content="Applied" Background="LightBlue" Margin="5"
                             GroupName="Status" Tag="Applied"
                             IsChecked="{Binding CurrentJob.Status, Converter={StaticResource StatusConverter}, ConverterParameter=Applied, Mode=TwoWay}"/>
                <RadioButton Grid.Column="1" Content="Under Review" Background="Yellow" Margin="5"
                             GroupName="Status" Tag="Under Review"
                             IsChecked="{Binding CurrentJob.Status, Converter={StaticResource StatusConverter}, ConverterParameter=Under Review, Mode=TwoWay}"/>
                <RadioButton Grid.Row="1" Content="Interviewing" Background="GreenYellow" Margin="5"
                             GroupName="Status" Tag="Interviewing"
                             IsChecked="{Binding CurrentJob.Status, Converter={StaticResource StatusConverter}, ConverterParameter=Interviewing, Mode=TwoWay}"/>
                <RadioButton Grid.Row="1" Grid.Column="1" Content="Offer" Background="Green" Margin="5"
                             GroupName="Status" Tag="Offer"
                             IsChecked="{Binding CurrentJob.Status, Converter={StaticResource StatusConverter}, ConverterParameter=Offer, Mode=TwoWay}"/>
            </Grid>
            
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add"  Margin="5" Width="40" Height="40" Command="{Binding AddCommand}"/>
                <Button Content="Save"  Margin="5" Width="40" Height="40" Command="{Binding SaveCommand}"/>
                <Button Content="Del" Margin="5" Width="40" Height="40" Command="{Binding DelCommand}"/>
            </StackPanel>
        </StackPanel>

        
    </Grid>
</Window>
